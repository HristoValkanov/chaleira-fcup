<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/minty"
    tools:context=".fragments.WaterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fundo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/fundow" />

        <ImageView
            android:id="@+id/blank"
            android:layout_width="match_parent"
            android:layout_height="485dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="29dp"
            android:scaleType="fitXY"
            android:src="@drawable/blank" />

        <TextView
            android:id="@+id/title4"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/blank"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="233dp"
            android:fontFamily="@font/silver"
            android:shadowColor="@color/lighter"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="Reservation "
            android:textColor="#5B2B2A"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reserv2"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/blank"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="280dp"
            android:fontFamily="@font/silver"
            android:shadowColor="@color/lighter"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="Reserve water :"
            android:textColor="#5B2B2A"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/statusreserv"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/blank"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="375dp"
            android:fontFamily="@font/silver"
            android:shadowColor="@color/lighter"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="Status of Revervation :"
            android:textColor="#5B2B2A"
            android:textSize="32sp" />

        <ImageButton
            android:id="@+id/btn_reserv2"
            android:layout_width="93dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="228dp"
            android:layout_marginLeft="228dp"
            android:layout_marginBottom="182dp"
            android:background="@drawable/butonreserv"
            android:onClick="reservClicked"
            android:scaleType="fitXY"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/watertitle1"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/blank"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="38dp"
            android:fontFamily="@font/silver"
            android:shadowColor="@color/lighter"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="Level of water (in ml) "
            android:textColor="#5B2B2A"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/qtdwater"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/blank"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="83dp"
            android:fontFamily="@font/silver"
            android:shadowColor="@color/lighter"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="Quantity of water:"
            android:textColor="#5B2B2A"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/watercl"
            android:layout_width="109dp"
            android:layout_height="58dp"
            android:layout_alignTop="@+id/blank"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="266dp"
            android:layout_marginLeft="266dp"
            android:layout_marginTop="88dp"
            android:fontFamily="@font/silver"
            android:shadowColor="@color/lighter"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="0"
            android:textColor="#5B2B2A"
            android:textSize="31sp" />


        <TextView
            android:id="@+id/textstatres"
            android:layout_width="133dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/blank"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="254dp"
            android:layout_marginLeft="254dp"
            android:layout_marginTop="376dp"
            android:fontFamily="@font/silver"
            android:shadowColor="@color/lighter"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="null"
            android:textColor="#5B2B2A"
            android:textSize="31sp" />

        <TextView
            android:id="@+id/minwater"
            android:layout_width="220dp"
            android:layout_height="87dp"
            android:layout_alignTop="@+id/blank"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="132dp"
            android:fontFamily="@font/silver"
            android:shadowColor="@color/lighter"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="Min. water required :"
            android:textColor="#5B2B2A"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/watercup"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/blank"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="152dp"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="182dp"
            android:fontFamily="@font/silver"
            android:shadowColor="@color/lighter"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:text="27 (1 cup)"
            android:textColor="#5B2B2A"
            android:textSize="31sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/blank"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="-10dp"
            android:src="@drawable/plants" />

        <EditText
            android:id="@+id/editTextNumberDecimal"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginBottom="144dp"
            android:clickable="true"
            android:ems="10"
            android:fontFamily="@font/silver"
            android:hint="Insert Number"
            android:inputType="numberDecimal"
            android:textColor="@color/wood"
            android:textColorHighlight="@color/wood"
            android:textColorHint="@color/wood"
            android:textColorLink="@color/darkminty"
            android:textSize="25sp"
            android:visibility="invisible"
            app:backgroundTint="@color/wood" />

        <ImageButton
            android:id="@+id/btnForm"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="163dp"
            android:layout_marginLeft="163dp"
            android:layout_marginBottom="146dp"
            android:background="@drawable/buttonform"
            android:clickable="true"
            android:onClick="inputForm"
            android:scaleType="fitXY"
            android:visibility="invisible"
            tools:ignore="OnClick" />


    </RelativeLayout>


</FrameLayout>